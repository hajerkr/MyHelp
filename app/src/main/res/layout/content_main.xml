<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hajer.myhelp.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/food"
        android:scaleType="fitCenter"
        android:maxWidth="72dp"
        android:maxHeight="72dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonDrink"
        android:layout_toStartOf="@+id/imageButtonDrink"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonDrink"
        android:src="@drawable/drink"

        android:maxWidth="72dp"
        android:maxHeight="72dp"
        android:adjustViewBounds="true"

        android:layout_alignTop="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/bed"
        android:maxWidth="72dp"
        android:maxHeight="72dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:layout_alignTop="@+id/imageButtonDrink"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_marginTop="87dp"
        android:src="@drawable/cold"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/sun"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButtonDrink"
        android:layout_alignEnd="@+id/imageButtonDrink" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/tv2"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

</RelativeLayout>
